# ---- basic

alias c="clear"
alias l="ls -la"
alias o="cd .."
alias e="nvim"
alias zr="exec $SHELL -l"                    # reload shell
alias x="exit"

# --- modtree

alias yb="yarn build"
alias yt="yarn test"
alias ys="yarn serve"
alias yd="yarn dev"

alias yds="yarn dev:server"
alias ye="yarn e2e"
alias resetdb="2m && cd scripts && ./postgres.sh && 2m"

# ---- helpers

alias pg="pdfgrep -rin"                      # search PDFs
alias cpwd="pwd | tr -d '\n' | pbcopy"       # copy pwd to clipboard
