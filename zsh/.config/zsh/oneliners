# ---- basic

alias c="clear"
alias l="ls -la"
alias o="cd .."
alias e="nvim"
alias zr="exec $SHELL -l"                    # reload shell
alias x="exit"

# --- yarn

alias yb="yarn build"
alias yt="yarn test"
alias ys="yarn serve"
alias yd="yarn dev"

# ---- helpers

alias pg="pdfgrep -rin"                      # search PDFs
alias cpwd="pwd | tr -d '\n' | pbcopy"       # copy pwd to clipboard
